<!DOCTYPE html>
<html{{ html_attributes }}>
  <head>
    <head-placeholder token="{{ placeholder_token }}">
    <title>{{ head_title|safe_join(' | ') }}</title>
    <css-placeholder token="{{ placeholder_token }}">
    <js-placeholder token="{{ placeholder_token }}">
  </head>
  <body{{ attributes.addClass('min-h-screen', 'flex', 'flex-col', 'bg-white') }}>
    {# Skip to main content link for accessibility #}
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-0 focus:left-0 bg-blue-600 text-white p-4 z-50">
      Skip to main content
    </a>

    {{ page_top }}

    {# Header #}
    <header >
      <div class="container mx-auto px-4 py-6">
        <div class="flex justify-between items-center">
          <h1 class="text-3xl font-bold">
            <a href="{{ path('<front>') }}" class="hover:text-blue-200 transition">
              {{ site_name }}
            </a>
          </h1>
          
          {% if page.primary_menu %}
            <nav class="hidden md:block">
              {{ page.primary_menu }}
            </nav>
          {% endif %}
        </div>
      </div>
    </header>

    {# Main Content #}
    <main id="main-content" class="flex-grow py-8">
      <div class="container mx-auto px-4">

        {% if page.breadcrumb %}
          <div class="mb-4">
            {{ page.breadcrumb }}
          </div>
        {% endif %}

        <div class="bg-white rounded-lg shadow-md p-8">
          {{ page.content }}
        </div>
      </div>
    </main>

    {# Footer #}
    <footer class="bg-gray-600 text-base mt-auto">
      <div class="container mx-auto px-4 py-6">
        {% if page.footer %}
          <div class="mb-4">
            {{ page.footer }}
          </div>
        {% endif %}
        <p class="text-center text-gray-400">
          Â© {{ "now"|date("Y") }} {{ site_name }}
        </p>
      </div>
    </footer>

    {{ page_bottom }}

    <js-bottom-placeholder token="{{ placeholder_token }}">
  </body>
</html>