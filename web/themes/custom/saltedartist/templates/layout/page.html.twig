{#
/**
 * @file
 * Theme implementation to display a single page.
 */
#}

<div class="min-h-screen flex flex-col bg-white">
  {# Skip to main content link for accessibility #}
  <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-0 focus:left-0 bg-blue-600 text-white p-4 z-50">
    Skip to main content
  </a>

  {{ page_top }}

  {# Header #}
  {% if page.header %}
    <header class="bg-white border-b">
      <div class="container mx-auto px-4 py-6">
        <div class="flex justify-between items-center">
          {{ page.header }}
          
          {% if page.primary_menu %}
            <nav class="hidden md:block">
              {{ page.primary_menu }}
            </nav>
          {% endif %}
        </div>
      </div>
    </header>
  {% endif %}

  {# Main Content #}
  <main id="main-content" class="flex-grow py-8">
    <div class="container mx-auto px-4">

      {% if page.breadcrumb %}
        <div class="mb-4">
          {{ page.breadcrumb }}
        </div>
      {% endif %}

      {% if page.highlighted %}
        <div class="mb-4">
          {{ page.highlighted }}
        </div>
      {% endif %}

      <div class="bg-white rounded-lg shadow-md p-8">
        {{ page.content }}
      </div>
    </div>
  </main>

  {# Footer #}
  {% if page.footer %}
    <footer class="bg-gray-600 text-white mt-auto">
      <div class="container mx-auto px-4 py-6">
        <div class="mb-4">
          {{ page.footer }}
        </div>
        <p class="text-center text-gray-400">
          Â© {{ "now"|date("Y") }}
        </p>
      </div>
    </footer>
  {% endif %}

  {{ page_bottom }}
</div>